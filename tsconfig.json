{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2016", "dom", "es5"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
